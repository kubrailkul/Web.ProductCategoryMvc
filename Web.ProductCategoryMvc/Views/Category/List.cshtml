@model  Web.ProductCategoryMvc.Models.ProductCategoryListViewModel
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";

    var kategori_adet = Model.Categories.Count;
}


<div class="container col-md-11">
    <h3>Kategori Listesi</h3>
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">@kategori_adet adet kayıt listelenmektedir.</h3>
        </div>
        <div class="card-body">
            <div style="overflow-x:auto;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>
                                    <a class="btn btn-primary" href="/Category/Edit/@item.Id"><i class="fa fa-pen"> Güncelle</i></a>   <a class="btn btn-danger" data-id="@item.Id" id="btnsil"><i class="fa fa-trash"> Sil</i></a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



