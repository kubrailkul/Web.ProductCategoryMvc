@model  Web.ProductCategoryMvc.Models.tblProduct

@{

    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}


@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
<form method="post" class="form-horizontal">
    

    <div class="col-md-8" style="margin:auto;margin-top:50px">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Ürün Ekle/Güncelle</h3>
            </div>     
            <div class="card-body">
                <div class="form-group row">
                    <label for="categoryName" class="col-sm-2 col-form-label">Ürün Adı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @required = "required", @placeholder = "Ürün Adını Giriniz" })
                    </div>

                </div>
                <div class="form-group row">
                    <label for="categoryName" class="col-sm-2 col-form-label">Ürün Kategorisi</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Lütfen Seçiniz", new { @class = "form-control", @required = "required" })
                    </div>

                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" id="btn_click">Kaydet</button>
            </div>
            <!-- /.card-footer -->

        </div>
    </div>

















</form>


}


          
       

