    <script type="text/javascript">
        $(document).on("click", ".btn.btn-danger", function () {
            var confirmDelete = confirm("Silme işlemini onaylıyor musunuz?");

            if (confirmDelete) {
                var id = $(this).attr("data-id");
                var delete_tr = $(this).closest("tr");
                $.ajax({
                    url: '/Category/Delete/' + id,
                    type: 'POST',

                    success: function (result) {

                        switch (result) {                         
                            case "-1":
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: 'Bu kategoride ürün vardır. Kategori silinemez. Ürün listesini kontrol ediniz!'
                                })
                                break;
                            case "-2":
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: 'Hata Oluştu!'

                                })

                            default:
                                delete_tr.fadeOut(400, function () {
                                    delete_tr.remove();
                                  
                                    if (result==0) {
                                       
                                        $("#div_category").hide();
                                      
                                        Swal.fire({
                                            icon: 'warning',
                                            text: 'Kayıt bulunamamıştır. Lütfen kayıt ekleyin!'
                                        })
                                    }
                                    else {
                                        $("#lbl_KategoriAdet").html(result + ' adet kayıt listelenmektedir.');
                                    }
                                });

                                Swal.fire({
                                    icon: 'success',
                                    text: 'Kategori başarıyla silindi'
                                })
                                break;
                        }

                    }

                });

            }

       







        });


    </script>
  
